<Window x:Class="InputRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputRecorder"
        mc:Ignorable="d"
        Title="Input Recorder" Height="180" Width="240" FontSize="20" Topmost="True">
    <StackPanel Margin="10">
        <ToggleButton x:Name="RecordButton" Content="Record" Width="180" Height="40" Margin="10"/>
        <Button x:Name="ReplayButton" Content="Replay" Width="180" Height="40" Margin="10"/>
    </StackPanel>
</Window>
